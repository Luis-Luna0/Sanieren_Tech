<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Sanieren Tech</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">



    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
</head>
<body>

   <div id="layoutSidenav_content">   
             <nav class="sb-topnav navbar navbar-expand shadow">               
                     <a class="navbar-brand ps-3" asp-area="" asp-controller="Home" asp-action="Index">Sanieren Tech</a>
                     <button class="btn btn-link btn-sm order-1 order-lg-0  " id="sidebarToggle" href="#!"><i class="bi bi-list"></i></button>

                <ul class="navbar-nav ml-auto">        
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ChangeUser">@User.Identity.Name</a>
                     </li>



                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                    </li>
                }
                else
                {
                    <li><a asp-area="" class="btn btn-primary" asp-controller="Account" asp-action="Login">Iniciar Sesión</a></li>
                }
                </ul>
            </nav>
    </div>


    <div id="layoutSidenav">       
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <ul class="list-unstyled components">  
                            <div class="sb-sidenav-menu-heading">
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                 <li>
                                    <a class="nav-link " asp-area="" asp-controller="Users" asp-action="Index">
                                    <div class="sb-nav-link-icon"><i class="bi bi-person-circle"></i></div> Usuarios</a>
                                 </li>
                                 <li>
                                    <a class="nav-link" asp-area="" asp-controller="Business" asp-action="Index">
                                    <div class="sb-nav-link-icon"><i class="bi bi-briefcase"></i></div> Clientes</a>
                                 </li>
                                 <li>
                                    <a class="nav-link" asp-area="" asp-controller="File" asp-action="Index">
                                    <div class="sb-nav-link-icon"><i class="bi bi-folder"></i></div> Carpetas</a>
                                 </li>
                                 <li>
                                     <a class="nav-link" asp-area="" asp-controller="Section" asp-action="Index">
                                     <div class="sb-nav-link-icon"><i class="bi bi-folder2"></i></div> Secciones</a>
                                 </li>
                                 <li>
                                     <a class="nav-link" asp-area="" asp-controller="Document" asp-action="Index">
                                    <div class="sb-nav-link-icon"><i class="bi bi-file-earmark-pdf"></i> </div>Documentos</a>
                                 </li>
                                } 
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Operative") || User.IsInRole("User"))
                            {
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="UsersShow" asp-action="Index">
                                    <div class="sb-nav-link-icon"><i class="bi bi-folder"></i></div> Carpeta Operativa</a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="">
                                    <div class="sb-nav-link-icon"><i class="bi bi-calendar"></i> </div>Calendario</a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="">
                                    <div class="sb-nav-link-icon"><i class="bi bi-file-earmark-pdf"></i> </div>Certificados</a> 
                                </li>
                            }

                         </ul>
                  </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>  
                @RenderBody()
            </div>
            </main>     
     </div>
 </div
 <div id="layoutSidenav_content">
     <footer class="site-footer ">
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-sm-6 col-xs-12">
            <p class="copyright-text">Sanieren Tech ® 2022 - Todos los derechos reservados </p>
          </div>
        </div>
        </div>
         </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>