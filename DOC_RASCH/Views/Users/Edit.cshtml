@model DOC_RASCH.Models.UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<body>
            <main>
              <div class="login-html">
                    <div class="container">
                          <div class="container-fluid  justify-content-center">
                            <div class="card px-1 py-4">
                                <h3 class="   d-flex justify-content-center">Editar Usuario</h3>
                            <div class="col-md-12">
                            <form asp-action="Edit" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="ImageId" />
                                    <img src="@Model.ImageFullPath" style="width: 200px; height: 200px; border-radius: 150px;" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="Email" />
                                 </div>

                                <partial name="_User" />

                                <div class="form-group">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-success">Regresar</a>
                                </div>
            	                    <dir-pagination-controls boundary-links="true" pagination-id="pagPd"></dir-pagination-controls>
                            </form>
                        </div>
    </main>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}