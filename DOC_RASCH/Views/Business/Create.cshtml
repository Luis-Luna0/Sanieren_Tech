@model DOC_RASCH.Data.Entities.Business

@{
    ViewData["Title"] = "Create";
}

<body>
    <main>
              <div class="login-html">
      <div class="container">
            <div class="container-fluid  justify-content-center">
                <div class="card px-1 py-4">
                    <h3 class="   d-flex justify-content-center">Registrar Cliente</h3>
                <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Active" value=1 class="form-control" />
                <input type="submit" value="Crear" class="btn btn-primary"/>
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
</div>
          </div>
        </div>
        </div>
        </div>
    </main>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

